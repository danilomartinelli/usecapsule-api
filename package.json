{
  "name": "@usecapsule/source",
  "description": "Capsule Platform - Zero-configuration cloud-native deployment platform with Magic Deployâ„¢ and complete infrastructure portability.",
  "author": "Witek Team",
  "private": true,
  "version": "1.0.0",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "libs/shared/*",
    "libs/configs/*"
  ],
  "scripts": {
    "dev": "npm run infrastructure:up && npm run serve:gateway",
    "dev:gateway": "nx serve api-gateway --watch",
    "dev:auth": "nx serve auth-service --watch",
    "dev:deploy": "nx serve deploy-service --watch",
    "dev:monitor": "nx serve monitor-service --watch",
    "dev:billing": "nx serve billing-service --watch",
    "dev:all": "nx run-many --target=serve --all --parallel",
    "serve:gateway": "nx serve api-gateway --watch",
    "build:all": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "test:e2e": "nx run-many --target=e2e --all",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "lint": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "format": "nx format:write",
    "infrastructure:up": "docker compose up -d",
    "infrastructure:down": "docker compose down",
    "infrastructure:reset": "docker compose down -v && docker compose up -d",
    "db:migrate:all": "echo 'Run migrations for all services' && npm run db:migrate:auth && npm run db:migrate:billing && npm run db:migrate:deploy && npm run db:migrate:monitor",
    "db:migrate:auth": "docker compose run --rm flyway -url=jdbc:postgresql://auth-db:5432/auth_service_db -user=auth_user -password=auth_pass -connectRetries=60 migrate",
    "db:seed:all": "echo 'Add seeding scripts here when ready'",
    "db:reset:all": "npm run infrastructure:down && docker volume prune -f && npm run infrastructure:up",
    "dep-graph": "nx graph"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "21.5.1",
    "@nx/eslint-plugin": "21.5.1",
    "@nx/js": "21.5.1",
    "@nx/nest": "^21.5.1",
    "@nx/node": "21.5.1",
    "@nx/web": "21.5.1",
    "@nx/webpack": "21.5.1",
    "@nx/workspace": "^21.5.1",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "~0.5.11",
    "@types/node": "^22.18.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.5.1",
    "prettier": "^3.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danilomartinelli/usecapsule-api.git"
  },
  "bugs": {
    "url": "https://github.com/danilomartinelli/usecapsule-api/issues"
  },
  "homepage": "https://github.com/danilomartinelli/usecapsule-api#readme",
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^6.0.2",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@types/amqplib": "^0.10.7",
    "amqplib": "^0.10.9",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.0"
  }
}
