{
  "name": "@usecapsule/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "affected:build": "nx affected --target=build",
    "affected:lint": "nx affected --target=lint",
    "graph": "nx graph",
    "clean": "nx reset",
    "setup": "node -v && docker --version && npx nx --version",
    "validate": "nx run-many --target=lint --all",
    "build:all": "nx run-many --target=build --all",
    "build:prod": "nx run-many --target=build --all --prod",
    "migrate:auth": "docker run --rm --network usecapsule-api_usecapsule-network -v $(pwd)/infrastructure/flyway:/flyway/conf -v $(pwd)/infrastructure/migrations/auth-service:/flyway/sql flyway/flyway:9.22.3-alpine -configFiles=/flyway/conf/auth-service.conf migrate",
    "migrate:auth:info": "docker run --rm --network usecapsule-api_usecapsule-network -v $(pwd)/infrastructure/flyway:/flyway/conf -v $(pwd)/infrastructure/migrations/auth-service:/flyway/sql flyway/flyway:9.22.3-alpine -configFiles=/flyway/conf/auth-service.conf info",
    "migrate:auth:validate": "docker run --rm --network usecapsule-api_usecapsule-network -v $(pwd)/infrastructure/flyway:/flyway/conf -v $(pwd)/infrastructure/migrations/auth-service:/flyway/sql flyway/flyway:9.22.3-alpine -configFiles=/flyway/conf/auth-service.conf validate"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/microservices": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "axios": "^1.6.0",
    "slonik": "^37.4.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/devkit": "21.4.1",
    "@nx/eslint": "21.4.1",
    "@nx/eslint-plugin": "21.4.1",
    "@nx/js": "21.4.1",
    "@nx/nest": "^21.4.1",
    "@nx/node": "21.4.1",
    "@nx/web": "21.4.1",
    "@nx/webpack": "21.4.1",
    "@nx/workspace": "21.4.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "20.19.9",
    "ajv": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jiti": "2.4.2",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.4.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "apps/*",
    "libs/*",
    "libs/shared/*",
    "apps"
  ]
}
