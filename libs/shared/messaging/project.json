{
  "name": "@usecapsule/messaging",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/messaging/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:lib", "layer:infrastructure"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/messaging",
        "tsConfig": "libs/shared/messaging/tsconfig.lib.json",
        "packageJson": "libs/shared/messaging/package.json",
        "main": "libs/shared/messaging/src/index.ts",
        "assets": ["libs/shared/messaging/*.md"],
        "rootDir": "libs/shared/messaging/src"
      }
    },
    "copy-declarations": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p libs/shared/messaging/dist",
          "cp -r dist/libs/shared/messaging/* libs/shared/messaging/dist/ 2>/dev/null || true"
        ],
        "parallel": false
      }
    }
  }
}
