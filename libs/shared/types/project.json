{
  "name": "@usecapsule/types",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/types/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:lib", "layer:domain"],
  "// targets": "to see all targets run: nx show project @usecapsule/types --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/types",
        "tsConfig": "libs/shared/types/tsconfig.lib.json",
        "packageJson": "libs/shared/types/package.json",
        "main": "libs/shared/types/src/index.ts",
        "assets": ["libs/shared/types/*.md"],
        "rootDir": "libs/shared/types/src"
      }
    }
  }
}
