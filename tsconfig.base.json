{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@usecapsule/source"],
    "paths": {
      "@usecapsule/types": ["./libs/shared/types/src/index.ts"],
      "@usecapsule/utils": ["./libs/shared/utils/src/index.ts"],
      "@usecapsule/rabbitmq": ["./libs/configs/rabbitmq/src/index.ts"],
      "@usecapsule/parameters": ["./libs/configs/parameters/src/index.ts"],
      "@usecapsule/database": ["./libs/shared/database/src/index.ts"],
      "@usecapsule/messaging": ["./libs/shared/messaging/src/index.ts"],
      "@usecapsule/decorators": ["./libs/shared/decorators/src/index.ts"],
      "@usecapsule/exceptions": ["./libs/shared/exceptions/src/index.ts"],
      "@usecapsule/observability": ["./libs/shared/observability/src/index.ts"],
      "@usecapsule/testing": ["./libs/shared/testing/src/index.ts"],
      "@usecapsule/ddd": ["./libs/shared/ddd/src/index.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  }
}
