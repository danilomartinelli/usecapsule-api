# .env - Global Env
NODE_ENV=development
LOG_LEVEL=info
RABBITMQ_URL=amqp://admin:admin@localhost:7010

# .env.api-gateway - API Gateway specific environment
API_GATEWAY_PORT=3000
API_GATEWAY_JWT_SECRET=dev-secret-key
API_GATEWAY_RATE_LIMIT_TTL=60
API_GATEWAY_RATE_LIMIT_MAX=100
API_GATEWAY_CORS_ORIGINS=http://localhost:3010

# .env.auth-service - Auth Service specific environment
AUTH_SERVICE_DB_HOST=localhost
AUTH_SERVICE_DB_PORT=5432
AUTH_SERVICE_DB_NAME=auth_service_db
AUTH_SERVICE_DB_USER=auth_user
AUTH_SERVICE_DB_PASSWORD=auth_pass
AUTH_SERVICE_JWT_SECRET=dev-secret-key
AUTH_SERVICE_BCRYPT_ROUNDS=10

# .env.deploy-service - Deploy Service specific environment
DEPLOY_SERVICE_DB_HOST=localhost
DEPLOY_SERVICE_DB_PORT=5433
DEPLOY_SERVICE_DB_NAME=deploy_service_db
DEPLOY_SERVICE_DB_USER=deploy_user
DEPLOY_SERVICE_DB_PASSWORD=deploy_pass
DEPLOY_SERVICE_KUBERNETES_API_URL=https://kubernetes.default.svc
DEPLOY_SERVICE_KUBERNETES_TOKEN=k8s-token
DEPLOY_SERVICE_REGISTRY_URL=registry.capsule.dev
